/* pages/gameBuy/gameBuy.wxss */
page{
  background-color: #fff;
}
.binName{
  color: #FF33BE !important;
}
.yx-cen{
  width: 750rpx;
  margin-bottom: 170rpx;
  background: #fff;
  overflow: hidden;
}
.yx-cen-con{
  width: 690rpx;
  /* height: auto; */
  height: 50hv;
  padding: 30rpx;
  display: inline-flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  overflow-y: auto
}
.yx-li{
  width: 25%;
  margin-bottom: 40rpx;
  /* display: flex;
  flex-direction: column; */
}
.yx-li-img{
 width:98rpx;
height:98rpx;
border-radius:10rpx;
margin: 0 auto;
position: relative;
}
.yx-li-img image{
 width:98rpx;
height:98rpx;
border-radius:10rpx;
margin: 0 auto;
}
.yx-li-img-border{
  width:20rpx;
height:20rpx;
background:#fff;
border:1px solid #AAAAAA;
border-radius:50%;
position: absolute;
  top: 5rpx;
  right: 5rpx;
}
.yx-li-img-border1{
  /* box-sizing: border-box; */
  /* border:4px solid rgba(255,51,190,1); */
  background-color: #FF33BE;
  border-color: #FF33BE !important;
}
.yx-li-txt{
  font-size: 26rpx;
  color:#424242;
  text-align: center;
  margin-top: 20rpx;
}





.gameImg, .gameName{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}
.gameImg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}
.gameName{
  font-size: 26rpx;
  color: #424242;
  font-weight: 600;
}
.buy{
  width: 690rpx;
  padding: 30rpx;
  margin-bottom: 200rpx;
  border-top: 1rpx solid #EAEAEA;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.buy .name{
  font-size: 32rpx;
  font-weight: 600;
  color: #424242;
}
.buy .money{
  font-size: 26rpx;
  font-weight: 600;
  color: #FF33BE;
}
.runBuy{
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 690rpx;
  height: 80rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3594FF;
}