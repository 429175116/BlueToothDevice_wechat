<block data-id="{{luntanTxt.id}}" class="luntanTxt" data-id="{{item.id}}">
  <view class='luntanCon'>
    <view class='luntanCon-con'>
      <view class='Administrator'>
        <view class='admin-left'>
          <image src='{{item.avatarUrl}}'></image>
          <view class='admin-con'>
            <view class='admin-name'>{{item.nickname}}</view>
            <view class='admin-date'>{{item.createTime}}</view>
          </view>
        </view>
        <view class='admin-right' bindtap="jinyanBtn">
          <icon class='iconfont icon-jinyan admin-icon'></icon>
          <text class='admin-jinyan'>禁言</text>
        </view>
      </view>
      <view class='luntanCon-tit'>
        <text class='luntanConTit-left'>{{item.title}}</text>
        <text class='luntanConTit-right'>{{item.label}}</text>
      </view>
      <view class='luntanCon-txt'>
        <text class='luntan-txt'>
       {{item.content}}
     </text>
        <view class='luntan-img'>
          <view class='luntan-imgCon' wx:for="{{item.file}}">
            <image src='{{item.file}}'></image>
          </view>
        </view>

        <view class="file">
          <view wx:for="{{5}}" class="file-item">
            <icon class="iconfont icon-jiaoben file-item-icon"></icon>
            <view class="file-h overflow-one">项目计划书项目计划书</view>
            <view class="file-t overflow-one">下载102次下载102次</view>
          </view>
        </view>

        <view class='luntan-from'>
          <text class='form-con'>来自</text>
          <navigator url='pages/yh-quanxian/yh-quanxian'>
            <image src='{{item.avatarUrl}}'></image>
          </navigator>
          <navigator class='yours'>
            <text>{{item.nickname}}</text>
          </navigator>
          <text class='data'>{{item.createTime}}</text>
        </view>
        <view class='luntanCon-bot'>
          <view class='luntanConBot-left'>
            <icon class='iconfont icon-chakan'></icon>
            <text>{{item.see}}</text>
            <text>次</text>
          </view>
          <view class='luntanConBot-con'>
            <icon class='iconfont icon-pinglun'></icon>
            <text>{{item.comment}}</text>
            <text>条</text>
          </view>
          <view class='luntanConBot-right'>
            <icon class='iconfont icon-shoucang'></icon>
            <text>{{item.follow}}</text>
          </view>
        </view>
        <!-- 评论 -->
        <view class="comment">
          <view class="comment-i" wx:for="{{2}}" bindlongtap="deleComment" data-id="{{item.id}}" wx:key="{{index}}">
            <image src="/image/luntan1.jpg" style="width: 56rpx; height: 56rpx;"></image>
            <view class="comment-right">
              <view class="comment-current">
                <view class="comment-text">
                  <view class="name">韩君：
                    <text class="text">非常棒的分享，谢谢！非常棒的分享，谢谢！</text>
                    <icon class="iconfont icon-tupian"></icon>
                    <text class="file">捕鱼大战游戏</text>
                  </view>
                </view>
                <view class="time">2019-12-21</view>
              </view>
              <view class="comment-two">
                <view class="comment-two-i">
                  <image src="/image/luntan1.jpg" style="width: 56rpx; height: 56rpx;"></image>
                  <view class="comment-right">
                    <view class="comment-text">
                      <view class="name">冬瓜头：
                        <text class="text">回复</text>
                          西瓜头
                        <text class="text">非常棒的分享，谢谢！非常棒的分享，谢谢！</text>
                        <icon class="iconfont icon-tupian"></icon>
                        <text class="file">查看图片</text>
                      </view>
                    </view>
                    <view class="time">2019-12-21</view>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</block>
<!-- 底部 -->
<view class="tiezi-bot-bot" hidden>
  <view class="tiezi-bot-con">
    <view class='tiezi-bot-li' bindtap='adminDelete'>
      <icon class='iconfont icon-delete tiezi-bot-icon'></icon>
      <text class='tiezi-bot-txt'>删除</text>
    </view>
    <view class='tiezi-bot-li' bindtap='adminTop'>
      <icon class='iconfont icon-zhiding tiezi-bot-icon'></icon>
      <text class='tiezi-bot-txt'>置顶</text>
    </view>
    <view class='tiezi-bot-li' bindtap='adminJiajing'>
      <icon class='iconfont icon-jiajing tiezi-bot-icon'></icon>
      <text class='tiezi-bot-txt'>加精</text>
    </view>
  </view>
</view>
<!-- 普通和管理进入页面不一样 -->
<view class="tiezi-bot-bot">
  <view class="tiezi-bot-con">
    <view class='tiezi-bot-li'>
      <icon class='iconfont icon-kanquanbu tiezi-bot-icon'></icon>
      <text class='tiezi-bot-txt'>看全部</text>
    </view>
    <view class='tiezi-bot-li'>
      <icon class='iconfont icon-zhikanlouzhu tiezi-bot-icon'></icon>
      <text class='tiezi-bot-txt'>只看楼主</text>
    </view>
  </view>
</view>


<view class="{{flag ? 'dele-block-wrap' : ''}}">
  <view class="tips" catchtouchmove="move" bindtap="hideDeleBlock"></view>
  <view class="dele-block" catchtouchmove="move">
    <view class="title">是否删除这条评论？</view>
    <view class="fot">
      <view class="no" bindtap="hideDeleBlock">否</view>
      <view class="yes" bindtap="deleBlock">是</view>
    </view>
  </view>
</view>