<!--pages/userVIP/userVIP.wxml-->
<view class="userVip">
  <view class="user">
    <image class="userImg" src="{{userInfo.avatarUrl}}"></image>
    <view class="">
      <view class="name">{{userInfo.nickname}}</view>
      <view class="info">
        <!-- <view class="vip" wx:if=="{{}}">未开通</view> -->
        <view><text>单月VIP</text>(会员到期还剩29天)</view>
      </view>
    </view>
  </view>
  <view class="userVipList">
    <text>开通VIP畅想免费下载特权</text>
    <view class="userVipListBox"> 
      <view class="item {{showId == item.id ? 'active' : 'default'}}" wx:for="{{list}}" wx:key="{{item}}" bindtap='dealTap' data-id="{{item.id}}">
        <text>{{item.time}}</text>
        <view class="price">￥<text>{{item.price}}</text></view> 
        <view style="margin-left: 100rpx;">
          <image class="img" wx:if="{{showId == item.id}}" src="/image/userVipImg.png"></image>
          <image class="img" wx:else src="/image/userVipImg1.png"></image>
        </view>  
      </view>
    </view>
  </view>
  <view class="cancel">会员到期随时取消</view>
  <view class="opening">立即开通</view>
</view>

